{
  "shadow.basic": {
    "$type": "shadow",
    "$value": {
      "color": "#000000",
      "offsetX": { "value": 0, "unit": "px" },
      "offsetY": { "value": 2, "unit": "px" },
      "blur": { "value": 4, "unit": "px" },
      "spread": { "value": 0, "unit": "px" }
    },
    "$path": "shadow.basic",
    "$source": {
      "collection": "tokens",
      "sourcePath": "tokens/shadows.json"
    }
  },
  "shadow.with.inset": {
    "$type": "shadow",
    "$value": {
      "color": "#000000",
      "offsetX": { "value": 0, "unit": "px" },
      "offsetY": { "value": 2, "unit": "px" },
      "blur": { "value": 4, "unit": "px" },
      "spread": { "value": 0, "unit": "px" },
      "inset": true
    },
    "$path": "shadow.with.inset",
    "$source": {
      "collection": "tokens",
      "sourcePath": "tokens/shadows.json"
    }
  },
  "shadow.multiple": {
    "$type": "shadow",
    "$value": [
      {
        "color": "#000000",
        "offsetX": { "value": 0, "unit": "px" },
        "offsetY": { "value": 2, "unit": "px" },
        "blur": { "value": 4, "unit": "px" },
        "spread": { "value": 0, "unit": "px" }
      },
      {
        "color": "#0000FF",
        "offsetX": { "value": 0, "unit": "px" },
        "offsetY": { "value": 4, "unit": "px" },
        "blur": { "value": 8, "unit": "px" },
        "spread": { "value": 2, "unit": "px" },
        "inset": true
      }
    ],
    "$path": "shadow.multiple",
    "$source": {
      "collection": "tokens",
      "sourcePath": "tokens/shadows.json"
    }
  }
}
