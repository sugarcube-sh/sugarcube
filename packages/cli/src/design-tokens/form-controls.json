{
  "form-control": {
    "activated-color": {
      "$value": "{color.accent.fill.loud}"
    },
    "background-color": {
      "$value": "{color.surface.default}"
    },
    "border-width": {
      "$value": "{border.width.thin}"
    },
    "border-style": {
      "$value": "{border.style}"
    },
    "border-color": {
      "$value": "{color.border.normal}"
    },
    "border-radius": {
      "$value": "{radius.lg}"
    },
    "padding": {
      "$type": "dimension",
      "block": {
        "$value": {
          "value": 0.65,
          "unit": "rem"
        }
      },
      "inline": {
        "$value": {
          "value": 1,
          "unit": "rem"
        }
      }
    },
    "line-height": {
      "$type": "number",
      "$value": "{leading.tight}"
    },
    "font-size": {
      "$value": "{text.sm}"
    },
    "placeholder-color": {
      "$type": "color",
      "$value": "{color.text.placeholder}"
    },
    "toggle-size": {
      "$type": "dimension",
      "$value": { "value": 1.25, "unit": "rem" }
    },
    "value-color": {
      "$value": "{color.text.normal}"
    },
    "label": {
      "color": { "$value": "{color.text.normal}" },
      "line-height": { "$value": "{leading.tight}" }
    }
  }
}
